public class Case3 {

    void show(StringBuffer a)
    {
        System.out.println("stringbuffer method");
    }

    void show(String a)
    {
        System.out.println("string method");
    }
    public static void main(String[] args) {
        Case3 c = new Case3();
        c.show("abc");
        c.show(new StringBuffer("xyz"));
        //c.show(null); //gives error
    }
}


// output:String method
        StringBuffer method