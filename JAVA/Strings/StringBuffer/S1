
class HelloWorld {
    public static void main(String[] args) {
        StringBuffer sb = new StringBuffer("deepak");
        System.out.println(sb.capacity()); // 16+string length
         System.out.println(sb.capacity()); 

         StringBuffer sb1 = new StringBuffer("deepak");
         StringBuffer sb2 = new StringBuffer("deepak");
         
         StringBuffer sb3 = sb1.append("hi");
         System.out.println(sb1.equals(sb2));  //false

         System.out.println(sb1.equals(sb3)); //true
    } 
}